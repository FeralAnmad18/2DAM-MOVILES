<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/viewContador"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="50dp"
        android:background="#FFFF00"
        android:gravity="center"
        android:text="@string/placeHolder"
        android:textColor="#0000FF"
        android:textSize="250sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:id="@+id/toastButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="#0000FF"
        android:onClick="toastButton"
        android:text="@string/toast"
        android:textColor="#FFFF00"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/countButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/suma"
        android:onClick="sumaButton"
        android:background="#0000FF"
        android:textColor="#FFFF00"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="650dp" />

    <Button
        android:id="@+id/resetButtom"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/countButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/reset"
        android:onClick="resetContador"
        android:background="#0000FF"
        android:textColor="#FFFF00"
        app:layout_constraintBottom_toBottomOf="@id/toastButton"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="224dp" />

</androidx.constraintlayout.widget.ConstraintLayout>